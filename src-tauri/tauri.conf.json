{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ai-researcher",
  "version": "0.2.0",
  "identifier": "ai.researcher.my",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "AI Researcher Assistant",
        "width": 800,
        "height": 600,
        "resizable": true,
        "maximized": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": false
  },
  "plugins": {
    "updater": {
      "active": false,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU5NTI2NzE5MkUxMUVBMzIKUldReTZoRXVHV2RTV1lRaXVYT3FhbVdyTFVod1RlYVFud1NKZkpyK2xxWkltL05XWkhoay9IWDgK",
      "endpoints": [
        "https://github.com/AssafMiron/ai-researcher/releases/latest/download/latest.json"
      ]
    }
  }
}